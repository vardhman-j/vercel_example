{
  "name": "todo-app",
  "version": "1.0.0",
  "description": "A simple todo app with React frontend and Node.js backend",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "client": "cd client && npm start",
    "dev-all": "concurrently \"npm run dev\" \"npm run client\"",
    "build": "cd client && npm run build",
    "vercel-build": "npm install && cd client && npm install && npm run build && cp -r client/build ."
  },
  "dependencies": {
    "express": "^4.17.1",
    "cors": "^2.8.5",
    "body-parser": "^1.19.0"
  },
  "devDependencies": {
    "nodemon": "^2.0.15",
    "concurrently": "^7.0.0"
  }
}
